<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/top_layout"
    android:background="@color/colorPantoneBlack"
    tools:context=".activities.MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/backArrowImag"
            android:visibility="gone"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/_10sdp"
            android:padding="@dimen/_2sdp"
            android:background="@drawable/selector_circular_effect"
            android:src="@drawable/ic_back_arrow"/>

        <ImageView
            android:src="@drawable/ic_logo"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/_3ssp"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30ssp"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/balance_layout"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/ColorPantoneLight"
        android:layout_height="@dimen/_25sdp">
        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:text="@string/account_balance"
            android:gravity="center"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="@dimen/txtSizeSmall"
            android:textColor="@color/colorPantoneBlack"
            android:fontFamily="@font/latinotypebold"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</LinearLayout>