<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
        <variable
            name="viewModel"
            type="com.butlerschocolates.app.viewmodels.support.SupportViewModel" />
    </data>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".fragment.support.SupportTicketFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:background="@color/ColorPantoneLight"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/addTicketLayout"
                android:layout_width="wrap_content"
                android:layout_marginVertical="@dimen/_5sdp"
                android:paddingVertical="@dimen/_3sdp"
                android:paddingHorizontal="@dimen/_10sdp"
                android:background="@drawable/round_rectangular_white_shape"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/add_ticket"
                    android:textAllCaps="true"
                    android:textSize="@dimen/txtSizeMedium"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:fontFamily="@font/latinotypebold"
                    android:textColor="@color/txtPantoneBlack"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <include
            android:id="@+id/no_found"
            android:visibility="gone"
            layout="@layout/no_found_layout"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_supportList"
            android:layout_width="match_parent"
            tools:listitem="@layout/recycler_view_support_ticket_list"
            android:layout_height="match_parent" />
    </LinearLayout>
    <androidx.core.widget.ContentLoadingProgressBar
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:visibility="@{viewModel.isLoading ? View.VISIBLE : View.GONE}" />
</RelativeLayout>
</layout>