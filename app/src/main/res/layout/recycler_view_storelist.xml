<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="android.view.View" />

        <variable
            name="storelist"
            type="com.butlerschocolates.app.model.storelist.Store" />

        <variable
            name="position"
            type="Integer" />

        <variable
            name="storeItemClick"
            type="com.butlerschocolates.app.adapter.storelist.StoreListAdapter.StoreClickedListener"/>
    </data>

<LinearLayout
    android:layout_width="match_parent"
    android:background="@drawable/round_rectangular_white_shape"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_5sdp"
    android:layout_marginRight="@dimen/_5sdp"
    android:gravity="center|left"
    android:padding="@dimen/_5sdp"
    android:layout_marginTop="@dimen/_10sdp"
    android:orientation="horizontal"
    tools:ignore="RtlHardcoded"
    android:onClick="@{() -> storeItemClick.onStoreLocationsSelected(storelist,position)}"
    >

    <ImageView
        android:src="@drawable/ic_location"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:contentDescription="location icon" />

    <TextView
        android:text="@{storelist.title}"
        android:textAllCaps="true"
        android:textSize="@dimen/txtSizeLarge"
        android:id="@+id/tv_store_name"
        android:fontFamily="@font/latinotype_arquitecta_book"
        android:textColor="@color/colorPantoneBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>
</layout>
