<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="android.view.View" />
        <variable
            name="product"
            type="com.butlerschocolates.app.model.common.Items" />

        <variable
            name="itemString"
            type="String" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/_2sdp"
           >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/orderProdTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/latinotypebold"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingRight="@dimen/_5sdp"
                    android:text="@{product.value}"
                    android:textColor="@color/txtLBlack"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold" />


            </LinearLayout>
            <TextView
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:visibility="@{itemString.length()==0 ? View.GONE: View.VISIBLE}"
                android:layout_height="wrap_content"
                android:fontFamily="@font/latinotype_arquitecta_book"
                android:text='@{itemString.trim()}'
                android:textColor="@color/txtLBlack"
                android:textSize="@dimen/_12ssp" />
        </LinearLayout>
    </LinearLayout>
</layout>