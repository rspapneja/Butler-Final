<?xml version="1.0" encoding="utf-8"?>
<layout >
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/round_rectangular_white_shape"
    android:layout_marginVertical="@dimen/_15ssp"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/productCartRecycleview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/emptyCartLayout"
            android:visibility="gone"
            android:layout_marginVertical="@dimen/_30sdp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:src="@drawable/ic_cup"
            android:layout_height="wrap_content"/>

            <TextView
                android:textSize="@dimen/txtSizeLarge"
                android:textColor="@color/txtPantoneBlack"
                android:fontFamily="@font/latinotype_arquitecta_book"
                android:text="Please add products into your Butlers bag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical"
            android:background="@color/ColorYellowLight"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp">
            <TextView
                android:paddingLeft="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TOTAL:"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/_15ssp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:textAllCaps="true"
                android:fontFamily="@font/latinotypebold"
                android:textColor="@color/colorPantoneBlack"
                android:textSize="@dimen/txtSizeMedium" />

            <TextView
                android:id="@+id/totalCartPrice"
                android:paddingLeft="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$3453"
                android:textStyle="bold"
                android:layout_centerInParent="true"
                android:textAllCaps="true"
                android:fontFamily="@font/latinotypebold"
                android:textColor="@color/colorPantoneBlack"
                android:textSize="@dimen/txtSizeMedium" />
        </RelativeLayout>

        <Button
            android:id="@+id/bt_pay_now"
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="  Pay Now  "
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:textAllCaps="true"
            android:layout_gravity="center"
            android:textColor="@color/colorBlack"
            android:background="@drawable/round_rectangular_pantone_light"
            android:textSize="@dimen/txtSizeMedium"
            android:drawableRight="@drawable/ic_unlock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>
</layout>