<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />
        <import type="android.text.TextUtils" />

        <variable
            name="text"
            type="androidx.appcompat.widget.AppCompatTextView" />

        <variable
            name="list"
            type="com.butlerschocolates.app.model.common.Product" />
        <variable
            name="menuPos"
            type="Integer" />

        <variable
            name="productPos"
            type="Integer" />

        <variable
            name="curencyType"
            type="String" />

        <variable
            name="optionsCheckerListerner"
            type="com.butlerschocolates.app.callback.OptionsCheckerListerner" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:background="@drawable/round_rectangular_white_shape"
        android:orientation="horizontal"
        android:padding="@dimen/_5sdp">

        <LinearLayout
            android:visibility="@{TextUtils.isEmpty(list.image) || list.image!=null ? View.VISIBLE: View.GONE}"
            android:layout_centerInParent="true"
            android:id="@+id/left_layout"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentLeft="true"
            android:gravity="center">

            <de.hdodenhof.circleimageview.CircleImageView
                app:image="@{list.image}"
                android:id="@+id/product_image"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/ic_location" />
        </LinearLayout>

        <LinearLayout
            android:layout_toLeftOf="@id/addProductLayout"
            android:layout_toRightOf="@id/left_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:text="@{list.title}"
                android:id="@+id/tvProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/latinotype_arquitecta_book"
                android:textAllCaps="true"
                android:textColor="@color/colorPantoneBlack"
                android:textSize="@dimen/txtSizeLarge" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvCurrencyType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/latinotype_arquitecta_book"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPantoneBlack"
                    android:textSize="@dimen/txtSizeLarge" />

                <TextView
                    android:text="@{list.desc}"
                    android:id="@+id/tv_product_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:ellipsize="end"
                    android:fontFamily="@font/latinotype_arquitecta_book"
                    android:maxLines="2"
                    android:visibility="@{TextUtils.isEmpty(list.desc) || list.desc!=null   ? View.GONE: View.VISIBLE}"
                    android:textColor="@color/colorPantoneBlack"
                    android:textSize="@dimen/txtSizeMedium" />

                <TextView
                    android:text='@{curencyType+ String.format("%.2f",list.price)}'
                    android:id="@+id/tv_product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/latinotype_arquitecta_book"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPantoneBlack"
                    android:textSize="@dimen/txtSizeSmall" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/addProductLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:gravity="end|right">

            <LinearLayout
                android:visibility="@{list.qty==0 ? View.GONE: View.VISIBLE}"
                android:id="@+id/displayQtyLayout"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:background="@drawable/circular_skyblue"
                android:gravity="center">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_productCross"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/latinotype_arquitecta_book"
                    android:text="X"
                    android:textColor="@color/txtPantoneBlack" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_productQty"
                    android:text="@{String.valueOf(list.qty)}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/latinotype_arquitecta_book"
                    android:textColor="@color/txtPantoneBlack" />
            </LinearLayout>

            <ImageView
                android:onClick="@{() -> optionsCheckerListerner.checkStoreType(text,menuPos,productPos)}"
                android:id="@+id/addProduct"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/ic_plus" />
        </LinearLayout>
    </RelativeLayout>
</layout>
