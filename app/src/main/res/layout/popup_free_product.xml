<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_rectangular_whiteshape"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/round_rectangular_grey"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_alertTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/latinotypebold"
                android:gravity="center"
                android:text="Loyalty"
                android:textAllCaps="true"
                android:textColor="@color/txtPantoneBlack"
                android:textSize="@dimen/txtSizeLarge" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_messageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:fontFamily="@font/latinotype_arquitecta_book"
            android:gravity="center"
            android:minHeight="@dimen/_30sdp"
            android:textColor="@color/txtPantoneBlack"
            android:textSize="@dimen/txtSizeLarge" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/minus_quantity"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:background="@drawable/circular_pantone_light"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/_10sdp"
                android:src="@drawable/ic_minus" />

            <TextView
                android:id="@+id/tv_loyalty_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/latinotypebold"
                android:text="1"
                android:layout_gravity="center"
                android:textColor="@color/colorPantoneBlack"
                android:layout_margin="@dimen/_5sdp"
                android:textSize="@dimen/_50sdp" />

            <ImageView
                android:id="@+id/plus_quantity"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:background="@drawable/circular_skyblue"
                android:src="@drawable/ic_add"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textColor="@color/colorPantoneBlack"
                android:layout_gravity="center_vertical" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginVertical="@dimen/_10sdp">

            <Button
                android:id="@+id/bt_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_rectangular_pantone_light"
                android:paddingHorizontal="@dimen/_20sdp"
                android:text="Cancel"
                android:textAllCaps="true" />


            <Button
                android:id="@+id/bt_get_it"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/round_rectangular_sea_dark"
                android:paddingHorizontal="@dimen/_20sdp"
                android:text="Get It"
                android:textAllCaps="true" />

        </RelativeLayout>
    </LinearLayout>
</layout>