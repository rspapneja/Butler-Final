<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/round_rectangular_whiteshape"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_rectangular_grey"
        android:orientation="horizontal">

        <TextView
           android:fontFamily="@font/latinotypebold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="@dimen/_10sdp"
            android:text="Saved Cards"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="@color/colorPantoneBlack"
            android:textSize="@dimen/_14ssp" />

        <ImageButton
            android:id="@+id/closedialog"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="@dimen/_2sdp"
            android:background="@android:color/transparent"
            android:padding="@dimen/_5sdp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:tint="@color/colorPantoneBlack"
            android:src="@drawable/ic_cross" />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/savedCardsList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_10sdp"
        />
</LinearLayout>