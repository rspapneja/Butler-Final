<layout  xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="android.view.View" />
        <variable
            name="viewModel"
            type="com.butlerschocolates.app.viewmodels.feedback.FeedbackViewModel" />
    </data>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
         android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorSeaBlueLight"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorSeaBlueDark"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:padding="@dimen/_5sdp"
                    android:text="Content"
                    android:textColor="@color/txtPantoneBlack"
                    android:fontFamily="@font/latinotype_arquitecta_book"
                    android:textAllCaps="true"

                    android:textSize="@dimen/txtSizeMedium" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_10sdp">

                    <RadioGroup
                        android:id="@+id/content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:id="@+id/contentAwesome"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:button="@null"
                            android:fontFamily="@font/latinotype_arquitecta_book"

                            android:drawableLeft="@mipmap/ic_smile"
                            android:gravity="center|left"
                            android:text="   Excellent"
                            android:textColor="@color/selector_radio_button_text_color"
                            android:textSize="@dimen/txtSizeSmall" />

                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:id="@+id/contentBest"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:button="@null"
                            android:fontFamily="@font/latinotype_arquitecta_book"
                            android:drawableLeft="@mipmap/ic_confused"
                            android:gravity="center|left"
                            android:text="    Good"
                            android:textColor="@color/selector_radio_button_text_color"
                            android:textSize="@dimen/txtSizeSmall" />

                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:id="@+id/contentNeutral"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:button="@null"
                            android:drawableLeft="@mipmap/ic_pensive"
                            android:gravity="center|left"
                            android:text="    Okay"
                            android:fontFamily="@font/latinotype_arquitecta_book"
                            android:textColor="@color/selector_radio_button_text_color"
                            android:textSize="@dimen/txtSizeSmall" />

                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:id="@+id/contentPoor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:button="@null"
                            android:fontFamily="@font/latinotype_arquitecta_book"
                            android:drawableLeft="@mipmap/ic_rage"
                            android:gravity="center|left"
                            android:text="    Poor"
                            android:textColor="@color/selector_radio_button_text_color"
                            android:textSize="@dimen/txtSizeSmall" />
                    </RadioGroup>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorSeaBlueLight"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp"
                    android:text="Ease of use"
                    android:textColor="@color/txtPantoneBlack"
                    android:fontFamily="@font/latinotype_arquitecta_book"
                    android:textAllCaps="true"
                    android:textSize="@dimen/txtSizeMedium" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_10sdp">

                    <RadioGroup
                        android:id="@+id/easyToUse"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:id="@+id/easyToUseAwesome"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:button="@null"
                            android:fontFamily="@font/latinotype_arquitecta_book"
                            android:drawableLeft="@mipmap/ic_smile"
                            android:gravity="center|left"
                            android:text="   Excellent"
                            android:textColor="@color/selector_radio_button_text_color"
                            android:textSize="@dimen/txtSizeSmall" />

                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:id="@+id/easyToUseBest"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:button="@null"
                            android:fontFamily="@font/latinotype_arquitecta_book"
                            android:drawableLeft="@mipmap/ic_confused"
                            android:gravity="center|left"
                            android:text="    Good"
                            android:textColor="@color/selector_radio_button_text_color"
                            android:textSize="@dimen/txtSizeSmall" />

                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:id="@+id/easyToUseNeutral"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:button="@null"
                            android:fontFamily="@font/latinotype_arquitecta_book"
                            android:drawableLeft="@mipmap/ic_pensive"
                            android:gravity="center|left"
                            android:text="    Okay"
                            android:textColor="@color/selector_radio_button_text_color"
                            android:textSize="@dimen/txtSizeSmall" />

                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:id="@+id/easyToUsePoor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:button="@null"
                            android:fontFamily="@font/latinotype_arquitecta_book"
                            android:drawableLeft="@mipmap/ic_rage"
                            android:gravity="center|left"
                            android:text="    Poor"
                            android:textColor="@color/selector_radio_button_text_color"
                            android:textSize="@dimen/txtSizeSmall" />
                    </RadioGroup>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorSeaBlueDark"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:padding="@dimen/_5sdp"
                    android:text="Design"
                    android:textColor="@color/txtPantoneBlack"
                    android:fontFamily="@font/latinotype_arquitecta_book"
                    android:textAllCaps="true"
                    android:textSize="@dimen/txtSizeMedium" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_10sdp">

                    <RadioGroup
                        android:id="@+id/design"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:id="@+id/designAwesome"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:button="@null"
                            android:fontFamily="@font/latinotype_arquitecta_book"
                            android:drawableLeft="@mipmap/ic_smile"
                            android:gravity="center|left"
                            android:text="   Excellent"
                            android:textColor="@color/selector_radio_button_text_color"
                            android:textSize="@dimen/txtSizeSmall" />

                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:id="@+id/designBest"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:fontFamily="@font/latinotype_arquitecta_book"
                            android:button="@null"
                            android:drawableLeft="@mipmap/ic_confused"
                            android:gravity="center|left"
                            android:text="    Good"
                            android:textColor="@color/selector_radio_button_text_color"
                            android:textSize="@dimen/txtSizeSmall" />

                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:id="@+id/designOkay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:fontFamily="@font/latinotype_arquitecta_book"
                            android:button="@null"
                            android:drawableLeft="@mipmap/ic_pensive"
                            android:gravity="center|left"
                            android:text="    Okay"
                            android:textColor="@color/selector_radio_button_text_color"
                            android:textSize="@dimen/txtSizeSmall" />


                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:id="@+id/designPoor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:button="@null"
                            android:fontFamily="@font/latinotype_arquitecta_book"
                            android:drawableLeft="@mipmap/ic_rage"
                            android:gravity="center|left"
                            android:text="    Poor"
                            android:textColor="@color/selector_radio_button_text_color"
                            android:textSize="@dimen/txtSizeSmall" />
                    </RadioGroup>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorSeaBlueLight"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:padding="@dimen/_5sdp"
                    android:textColor="@color/txtPantoneBlack"
                    android:fontFamily="@font/latinotype_arquitecta_book"
                    android:textAllCaps="true"
                   android:text="Overall"
                    android:textSize="@dimen/txtSizeMedium" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_10sdp">

                    <RadioGroup
                        android:id="@+id/overall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:id="@+id/overallAwesome"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:button="@null"
                            android:fontFamily="@font/latinotype_arquitecta_book"
                            android:drawableLeft="@mipmap/ic_smile"
                            android:gravity="center|left"
                            android:text="   Excellent"
                            android:textColor="@color/selector_radio_button_text_color"
                            android:textSize="@dimen/txtSizeSmall" />


                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:id="@+id/overallGood"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:button="@null"
                            android:fontFamily="@font/latinotype_arquitecta_book"
                            android:drawableLeft="@mipmap/ic_confused"
                            android:gravity="center|left"
                            android:text="    Good"
                            android:textColor="@color/selector_radio_button_text_color"
                            android:textSize="@dimen/txtSizeSmall" />

                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:id="@+id/overallOkay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:button="@null"
                            android:fontFamily="@font/latinotype_arquitecta_book"
                            android:drawableLeft="@mipmap/ic_pensive"
                            android:gravity="center|left"
                            android:text="    Okay"
                            android:textColor="@color/selector_radio_button_text_color"
                            android:textSize="@dimen/txtSizeSmall" />

                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:id="@+id/overallPoor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:button="@null"
                            android:fontFamily="@font/latinotype_arquitecta_book"
                            android:drawableLeft="@mipmap/ic_rage"
                            android:gravity="center|left"
                            android:text="    Poor"
                            android:textColor="@color/selector_radio_button_text_color"
                            android:textSize="@dimen/txtSizeSmall" />

                    </RadioGroup>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorSeaBlueDark"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:padding="@dimen/_5sdp"
                    android:textAllCaps="true"
                    android:text="How are you feeling today?"
                    android:textColor="@color/txtPantoneBlack"
                    android:fontFamily="@font/latinotype_arquitecta_book"
                    android:textSize="@dimen/txtSizeMedium" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_10sdp">

                    <RadioGroup
                        android:id="@+id/emoji_Radio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:id="@+id/emojiAwesome"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:button="@null"
                            android:fontFamily="@font/latinotype_arquitecta_book"
                            android:drawableLeft="@mipmap/ic_smile"
                            android:gravity="center|left"
                            android:text="   Excellent"
                            android:textColor="@color/selector_radio_button_text_color"
                            android:textSize="@dimen/txtSizeSmall" />

                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:id="@+id/emojiSmile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:button="@null"
                            android:drawableLeft="@mipmap/ic_confused"
                            android:gravity="center|left"
                            android:text="    Good"
                            android:fontFamily="@font/latinotype_arquitecta_book"
                            android:textColor="@color/selector_radio_button_text_color"
                            android:textSize="@dimen/txtSizeSmall" />

                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:id="@+id/emojiConfused"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:button="@null"
                            android:drawableLeft="@mipmap/ic_pensive"
                            android:gravity="center|left"
                            android:text="    Okay"
                            android:fontFamily="@font/latinotype_arquitecta_book"
                            android:textColor="@color/selector_radio_button_text_color"
                            android:textSize="@dimen/txtSizeSmall" />


                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:id="@+id/emojiBad"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:button="@null"
                            android:drawableLeft="@mipmap/ic_rage"
                            android:gravity="center|left"
                            android:text="    Poor"
                            android:fontFamily="@font/latinotype_arquitecta_book"
                            android:textColor="@color/selector_radio_button_text_color"
                            android:textSize="@dimen/txtSizeSmall" />


                    </RadioGroup>
                </LinearLayout>
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:padding="@dimen/_5sdp"
                    android:text="Tell us your experience or report a bug:"
                    android:textAllCaps="true"
                    android:fontFamily="@font/latinotype_arquitecta_book"
                    android:textColor="@color/txtPantoneBlack"
                    android:textSize="@dimen/txtSizeSmall" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_50sdp"
                    android:background="@drawable/square_border"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/comment"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_margin="@dimen/_5sdp"
                        android:background="@null"
                        android:gravity="top"
                        android:fontFamily="@font/latinotype_arquitecta_book"
                        android:hint="Type Review here.."
                        android:padding="@dimen/_5sdp"
                        android:textStyle="italic"
                        android:textColorHint="@color/txtPantoneBlack"
                        android:textColor="@color/txtPantoneBlack"
                        android:textCursorDrawable="@color/colorPrimary"
                        android:textSize="@dimen/txtSizeSmall" />

                    <Button
                        android:id="@+id/submitFeedback"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_margin="@dimen/_5sdp"
                        android:background="@drawable/round_rectangular_pantone_light"
                        android:gravity="center"
                        android:padding="@dimen/_5sdp"
                        android:text="Submit"
                        android:textStyle="bold"
                        android:fontFamily="@font/latinotypebold"
                        android:textColor="@color/txtPantoneBlack"
                        android:textSize="@dimen/txtSizeSmall" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
    <androidx.core.widget.ContentLoadingProgressBar
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:visibility="@{viewModel.isLoading ? View.VISIBLE : View.GONE}" />
</RelativeLayout>
    </layout>
