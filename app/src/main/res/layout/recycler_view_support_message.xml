<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <data>
        <import type="android.view.View" />
        <variable
            name="list"
            type="com.butlerschocolates.app.model.support.detail.Comment" />

        <variable
            name="position"
            type="Integer" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_7sdp"
        android:layout_marginRight="@dimen/_7sdp"
        android:layout_marginBottom="@dimen/_7sdp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/adminView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:orientation="vertical"
            android:visibility="@{list.adminId==0 ? View.GONE: View.VISIBLE}">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_gravity="top"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:scaleType="fitEnd"
                    android:src="@drawable/ic_light_box"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#CFD7C5"
                    android:clickable="true"
                    android:orientation="vertical"
                    android:padding="@dimen/_7sdp"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/adminText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@{list.message}"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_12ssp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/adminDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="@dimen/_20sdp"
                android:text="@{list.created}"
                android:textColor="@color/txtPantoneBlack"
                android:textSize="@dimen/_8ssp" />
        </LinearLayout>

        <RelativeLayout
            android:visibility="@{list.adminId==0 ? View.VISIBLE: View.GONE}"
            android:id="@+id/customerView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:background="#adb9b3"
                    android:orientation="vertical"
                    android:padding="@dimen/_7sdp">

                    <TextView
                        android:id="@+id/customerText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|end"
                        android:text="@{list.message}"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_12ssp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/right_Arrow"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="top"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:scaleType="fitStart"
                    android:src="@drawable/ic_dark_box"
                    android:visibility="visible" />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:visibility="@{list.adminId==0 ? View.VISIBLE: View.GONE}"
            android:id="@+id/customerDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:text="@{list.created}"
            android:textColor="#39282D"
            android:textSize="@dimen/_8ssp" />
    </LinearLayout>
</layout>

