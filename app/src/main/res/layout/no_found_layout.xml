<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
 <LinearLayout
        android:id="@+id/no_found_layout"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_no_image_found"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_no_data_found"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_no_text_found"
            android:layout_marginTop="@dimen/_5sdp"
            android:textSize="@dimen/txtSizeLarge"
            android:fontFamily="@font/latinotypebold"
            android:textColor="@color/colorPantoneBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</layout>
