<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/colorSeaBlueDark"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/dymanicSplashLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/splash_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_130sdp"
                android:layout_centerInParent="true"
              />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textSize="@dimen/txtSizeSuperLarge"
                android:layout_gravity="center"
                android:fontFamily="@font/latinotypebold"
                android:layout_marginTop="@dimen/margin_difference_between_view"
                android:textColor="@color/colorPantoneBlack"
                android:layout_height="wrap_content"/>

            <ImageView android:layout_width="@dimen/_140sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_difference_between_view"
                android:background="@color/colorPantoneBlack"
                android:layout_height="@dimen/_2sdp"/>
            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="wrap_content"
                android:textAllCaps="true"
                android:textSize="@dimen/txtSizeLarge"
                android:layout_gravity="center"
                android:gravity="center"
                android:fontFamily="@font/latinotypebold"
                android:layout_marginTop="@dimen/margin_difference_between_view"
                android:textColor="@color/txtPantoneBlack"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/getStarrtedLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
        android:layout_margin="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp">

        <TextView
            android:id="@+id/tv_login"
            android:textSize="@dimen/txtSizeMedium"
            android:text="Login"
            android:fontFamily="@font/latinotype_arquitecta_book"
            android:textColor="@color/txtPantoneBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_skip"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/txtSizeMedium"
            android:text="Skip"
            android:textColor="@color/txtPantoneBlack"
            android:fontFamily="@font/latinotype_arquitecta_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <ImageView android:layout_width="match_parent"
        android:layout_height="@dimen/_130sdp"
        android:tint="@color/colorPantoneBlack"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_logo"
        />
  <LinearLayout
        android:layout_marginHorizontal="@dimen/_45sdp"
        android:orientation="vertical"

        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/_25sdp"
      >
      <Button
          android:id="@+id/bt_getStarted"
          android:layout_width="match_parent"
          android:text="@string/get_Started"
          android:textSize="@dimen/txtSizeMedium"
          android:fontFamily="@font/latinotype_arquitecta_book"
          android:textColor="@color/colorPantoneBlack"
          android:background="@drawable/round_rectangular_white_shape"
          android:layout_height="wrap_content"/>
      <Button
          android:id="@+id/bt_facebook_login"
          android:layout_width="match_parent"
          android:text="@string/fb_Login"
          android:padding="@dimen/_5sdp"
          android:fontFamily="@font/latinotype_arquitecta_book"
          android:textColor="@color/colorPantoneBlack"
          android:layout_marginTop="@dimen/margin_difference_between_view"
          android:textSize="@dimen/txtSizeMedium"
          android:background="@drawable/round_rectangular_white_shape"
          android:layout_height="wrap_content"/>
    </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
