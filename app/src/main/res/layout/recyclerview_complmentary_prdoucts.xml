<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <data>
        <import type="android.view.View" />
        <variable
            name="itemList"
            type="com.butlerschocolates.app.model.common.Items" />
        <variable
            name="position"
            type="Integer" />
    </data>

    <RelativeLayout
        android:id="@+id/parent_layout"
        android:layout_width="match_parent"
        android:background="@drawable/round_rectangular_white_shape"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:gravity="center|left"
        android:padding="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            app:image="@{itemList.image}"
            android:id="@+id/product_image"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/ic_location" />

            <TextView
                android:layout_toLeftOf="@id/addPrdouctImage"
                android:layout_toRightOf="@id/product_image"
                android:text="@{itemList.value}"
                android:textAllCaps="true"
                android:layout_centerInParent="true"
                android:textSize="@dimen/txtSizeLarge"
                android:fontFamily="@font/latinotype_arquitecta_book"
                android:textColor="@color/colorPantoneBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/addPrdouctImage"
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"/>
    </RelativeLayout>
</layout>