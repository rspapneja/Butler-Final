<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/deleteCartProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_8sdp"
                android:src="@drawable/ic_cross" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/displayQtyLayout"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:background="@drawable/circular_skyblue"
                android:gravity="center">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_productCross"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/latinotype_arquitecta_book"
                    android:text="X"
                    android:textColor="@color/txtPantoneBlack" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_productQty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/latinotype_arquitecta_book"
                    android:textColor="@color/txtPantoneBlack" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp">

                    <TextView
                        android:id="@+id/tv_productName"
                        android:layout_width="0dp"
                        android:layout_weight=".76"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_toLeftOf="@+id/tv_product_price"
                        android:fontFamily="@font/latinotypebold"
                        android:textAllCaps="true"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/txtSizeMedium" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_product_price"
                        android:layout_width="0dp"
                        android:layout_weight=".25"
                        android:textSize="@dimen/txtSizeMedium"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:fontFamily="@font/latinotypebold"
                        android:textColor="@color/colorPantoneBlack" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/optionsAttributesRecyclerview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:visibility="gone"
                            android:id="@+id/comlementaryItemsREcyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:fontFamily="@font/latinotypebold"
                        android:paddingRight="@dimen/_10sdp"
                        android:text=""
                        android:textAllCaps="true"
                        android:textColor="@color/colorPantoneBlack"
                        android:textSize="@dimen/txtSizeLarge"
                        android:visibility="invisible" />
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/complementaryLayout"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_marginRight="@dimen/_30sdp"
        android:background="@drawable/round_rectangular_pantone_light"
        android:layout_height="wrap_content">

        <TextView
            android:text="Complimentary"
            android:textAllCaps="true"
            android:gravity="center"
            android:layout_marginTop="@dimen/_2sdp"
            android:textSize="@dimen/txtSizeMedium"
            android:fontFamily="@font/latinotypebold"
            android:textColor="@color/txtPantoneBlack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:padding="@dimen/_3sdp"
            android:textAllCaps="true"
            android:id="@+id/complementary_item_name"
            android:textSize="@dimen/txtSizeSmall"
            android:fontFamily="@font/latinotype_arquitecta_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/productQtyLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:gravity="center|end">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_rectangular_pantone_dark"
            android:paddingVertical="@dimen/_2sdp">

            <TextView
                android:id="@+id/decreaseQty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/latinotypebold"
                android:paddingLeft="@dimen/_10sdp"
                android:text="-"
                android:textAllCaps="true"
                android:textColor="@color/ColorWhite"
                android:textSize="@dimen/txtSizeLarge" />

            <TextView
                android:id="@+id/productQty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/latinotypebold"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10ssp"

                android:text="1"
                android:textAllCaps="true"
                android:textColor="@color/ColorWhite"
                android:textSize="@dimen/txtSizeMedium" />

            <TextView
                android:id="@+id/increaseQty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/latinotypebold"
                android:paddingRight="@dimen/_10sdp"
                android:text="+"
                android:textAllCaps="true"
                android:textColor="@color/ColorWhite"
                android:textSize="@dimen/txtSizeLarge" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
</RelativeLayout>
</LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@color/colorPantoneBlack" />
    </LinearLayout>
</layout>