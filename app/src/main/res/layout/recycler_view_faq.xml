<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="viewmodel"
            type="com.butlerschocolates.app.model.faq.Faq" />
    </data>
    <LinearLayout


        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/linearMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_5sdp">
            <CheckBox
                android:id="@+id/faqQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:button="@null"

                android:fontFamily="@font/latinotypebold"
                android:padding="@dimen/_5sdp"


                android:textColor="@color/txtLBlack"
                android:textSize="@dimen/txtSizeMedium" />
            <TextView
                android:id="@+id/faqAnswer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:fontFamily="@font/latinotypebold"
                android:padding="@dimen/_5sdp"

                android:textColor="@color/txtLBlack"
                android:textSize="@dimen/txtSizeSmall"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>
</layout>